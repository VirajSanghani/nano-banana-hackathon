# Pixel-Forge PvP Environment Configuration
# Copy this file to .env and add your actual values

# Google Gemini API Key (Required)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_google_gemini_api_key_here

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=true

# Optional: Rate Limiting (requests per minute)
GEMINI_RPM_LIMIT=15

# Optional: Weapon Generation Settings
WEAPON_GENERATION_TIMEOUT=3.0
MAX_WEAPONS_PER_PLAYER=5
WEAPON_COOLDOWN_SECONDS=12

# Optional: Match Settings
MAX_MATCH_DURATION=90
MIN_PLAYERS_PER_MATCH=2
MAX_PLAYERS_PER_MATCH=4

# Optional: Physics Settings
AUTO_PHYSICS_INTERVAL=35
PHYSICS_MODIFICATION_DURATION=15